<h1>New Check-in</h1>
<%= form_with model: CheckIn.new, local: true do |f| %>
  <div class="form-group">
    <%= f.label :member_id %>
    <%= f.collection_select :member_id, Member.all, :id, :name, { prompt: "Select Member" }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :check_in_time %>
    <%= f.datetime_select :check_in_time, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back to Check-ins List', check_ins_path, class: 'btn btn-secondary' %>
